const moodMap = {
  1: 'horrível',
  2: 'mal',
  3: 'mais ou menos',
  4: 'bem',
  5: 'excelente'
};

document.addEventListener('DOMContentLoaded', function() {
  fetch('/getMoodData')
    .then(response => response.json())
    .then(data => {
      const moodChartAnual = new Chart(document.getElementById('moodChart'), {
        type: 'line',
        data: {
          labels: data.anual.labels,
          datasets: [{
            label: 'Humor ao longo do ano',
            data: data.anual.moodValues,
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 2,
            fill: false
          }]
        },
        options: {
          scales: {
            x: {
              display: true,
              title: {
                display: true,
                text: 'Mês'
              }
            },
            y: {
              beginAtZero: true,
              min: 1,
              max: 5,
              stepSize: 1,
              display: true,
              title: {
                display: true,
                text: 'Humor'
              },
              ticks: {
                callback: function(value) {
                  return moodMap[value];
                }
              }
            }
          }
        }
      });

      const contagemHumores = data.contagem;
      const labelsHumores = Object.keys(moodMap).map(key => moodMap[key]);
      const valoresHumores = labelsHumores.map(humor => contagemHumores[humor] || 0);

      const moodCountChartAnual = new Chart(document.getElementById('moodCountChart'), {
        type: 'bar',
        data: {
          labels: labelsHumores,
          datasets: [{
            label: 'Contagem de Humores',
            data: valoresHumores,
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 2
          }]
        },
        options: {
          scales: {
            x: {
              display: true,
              title: {
                display: true,
                text: 'Humores'
              }
            },
            y: {
              beginAtZero: true,
              display: true,
              title: {
                display: true,
                text: 'Contagem'
              },
              ticks: {
                stepSize: 1,
                callback: function(value) {
                  if (Number.isInteger(value)) {
                    return value;
                  }
                  return '';
                }
              }
            }
          }
        }
      });
    });
});

