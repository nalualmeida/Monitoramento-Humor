          <button type="button" class="btn btn-social amigos" data-social="amigos">Amigos</button>
          <!-- Adicione outros botões sociais conforme necessário -->
        </div>
        <input type="hidden" name="social" id="social">
      </div>

      <div class="form-group">
        <label>Clima</label>
        <div class="center-content">
          <button type="button" class="btn btn-clima ensolarado" data-clima="ensolarado">Ensolarado</button>
          <button type="button" class="btn btn-clima nublado" data-clima="nublado">Nublado</button>
          <!-- Adicione outros botões de clima conforme necessário -->
        </div>
        <input type="hidden" name="clima" id="clima">
      </div>

      <div class="form-group">
        <label for="anotacao">Anotação</label>
        <textarea class="form-control" id="anotacao" name="anotacao" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="foto">Foto</label>
        <input type="file" class="form-control-file" id="foto" name="foto">
      </div>

      <div class="form-group text-center">
        <button type="submit" class="btn btn-custom">Salvar</button>
      </div>
    </form>
  </main>

